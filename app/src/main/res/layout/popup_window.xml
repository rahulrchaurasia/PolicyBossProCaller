<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:id="@+id/lyParent"
    android:background="@null">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginLeft="@dimen/four"
            android:layout_marginBottom="-8dp"
            android:text="PolicyBoss Pro"
            android:textColor="@color/blue_descent"
            android:textSize="14sp"
            android:fontFamily="@font/bungee"
            android:textStyle="normal" />


        <RelativeLayout
            android:id="@+id/lyMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:background="@drawable/bg_lightgreen_topoval"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/eight"
                    android:layout_marginTop="@dimen/twelve"
                    android:layout_marginBottom="@dimen/twelve"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/twelve"
                        android:src="@drawable/ic_policyboss"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtMob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/four"
                        android:text="incommcall 909009"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        android:fontFamily="@font/poppinsbold"
                        android:layout_marginTop="0dp"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="parent" />

<!--                    <View-->
<!--                        android:layout_marginTop="@dimen/four"-->
<!--                        android:layout_marginBottom="@dimen/four"-->
<!--                        android:id="@+id/viewHdr"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="0.6dp"-->
<!--                        android:visibility="gone"-->
<!--                        android:background="@color/dashboard_bg"-->
<!--                        app:layout_constraintEnd_toEndOf="@id/txtVehicleDtls"-->
<!--                        app:layout_constraintStart_toStartOf="@+id/txtMob"-->
<!--                        app:layout_constraintTop_toBottomOf="@+id/txtMob"-->
<!--                        >-->

<!--                    </View>-->

                    <TextView
                        android:id="@+id/txtVehicleDtls"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/twelve"

                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/muli"
                        android:text="PolicyBoss Pro Caller"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toBottomOf="@+id/txtMob" />

                    <LinearLayout
                        android:id="@+id/window_close"
                        android:layout_width="80dp"
                        android:layout_height="0dp"
                        android:gravity="right"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView

                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="@dimen/eight"

                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic__close_white_24" />
                    </LinearLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dashboard_bg">

                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:background="@drawable/bg_bottom_white_currve"
                    android:paddingBottom="@dimen/eight">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="@dimen/four"
                        android:padding="@dimen/_3dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expiray Date: "
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/txtExpiryDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="@dimen/four"
                        android:padding="@dimen/_3dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Previous Insurer: "
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/txtInsurer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyOther"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="1.5dp"
                    android:layout_marginBottom="1.5dp"
                    android:background="@drawable/bg_bottom_currve">



                    <TextView
                        android:id="@+id/txtOther"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/eight"
                        android:paddingTop="@dimen/eight"
                        android:gravity="center"
                        android:paddingRight="@dimen/eight"
                        android:paddingBottom="10dp"
                        android:text="View Details"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>